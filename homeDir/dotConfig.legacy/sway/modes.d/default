# 常用
$bindsym $mod+Shift+Return exec $term
$bindsym $mod+d exec $menu
$bindsym $mod+Shift+v exec $cliphist
$bindsym $mod+Shift+q kill

$bindsym $mod+f fullscreen
$bindsym $mod+Shift+m floating toggle
$bindsym $mod+m layout toggle split

$bindsym $mod+Shift+grave move scratchpad, exec "waybar-signal scratchpad"
$bindsym $mod+grave scratchpad show, exec "waybar-signal scratchpad"

