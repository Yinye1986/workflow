set $mode_shutdown "\
<span foreground='$color1'>ï€‘</span> \
<span foreground='$color1'><b>L</b></span>ock \
<span foreground='$color1'><b>E</b></span>xit \
<span foreground='$color1'><b>P</b></span>oweroff \
<span foreground='$color1'><b>R</b></span>eboot"

mode --pango_markup $mode_shutdown {
    $bindsym l mode "defautl", exec swaylock
    $bindsym e exec swaymsg exit
    $bindsym p exec systemctl poweroff
    $bindsym r exec systemctl reboot
    $bindsym Escape mode "default"
}

$bindsym $mod+Control+q mode $mode_shutdown
